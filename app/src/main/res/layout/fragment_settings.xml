<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_button"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_button"
            android:drawableStart="@drawable/icon_save"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="20dp"
            android:text="Simpan Daftar Transaksi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="355dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_button"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_button"
            android:drawableStart="@drawable/icon_send"
            android:paddingStart="20dp"
            android:paddingEnd="35dp"
            android:drawablePadding="20dp"
            android:text="Kirim Daftar Transaksi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="425dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_bc_button"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="45dp"
            android:drawablePadding="20dp"
            android:background="@drawable/rounded_corner_button"
            android:drawableStart="@drawable/icon_randomize"
            android:text="Randomize Transaksi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="235dp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textAllCaps="false"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:textSize="18sp"
            android:layout_marginStart="75dp"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="522dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>